<!DOCTYPE html>
<html>
<head>
    <h1>Joe's HotDog Stand</h1>
</head>
<style>
    h1{
        color:#3b0202;
        background-color: rgb(245, 119, 102);
        text-align: center;
        font-family: sans-serif;
    }
    h2{
        color:#3b0202;
        text-align: center;
        font-family: sans-serif;
    }
</style>
<body style="background-color:rgb(221, 171, 96);">
<script>
    alert("Welcome to Joe's HotDog Stand.\nWe sell hotdogs, french fries and drinks. \n\nHotdogs: $3.75 \nFrench Fries: $2.00 \nDrinks: $1.50 ");
    hotdogCount = prompt("How many hotdog order ($3.75) would you like?", 0);
    friesCount = prompt("How many french fry orders ($2.00) would you like?", 0);
    drinkCount = prompt("How many drink orders ($1.50) would you like?", 0);
    document.write("<center>");
    document.write("<h2>Thank you for your order!</h2>" + "<br>");
    total = (hotdogCount*3.75 + friesCount*2 + drinkCount*1.5).toFixed(2);
    subtotalText = "Subtotal: $" + total + "<br>";
    document.write(subtotalText.bold());
    document.write(hotdogCount + " Hotdogs: $" + (hotdogCount*3.75).toFixed(2) + "<br>");
    document.write(friesCount + " French Fries: $" + (friesCount*2).toFixed(2) + "<br>");
    document.write(drinkCount + " Drinks: $" + (drinkCount*1.5).toFixed(2) + "<br>");
    if (total > 20){
        discountText = "<br>" + "Joe's Discount: -$" + (total*.1).toFixed(2);
        total = total - (total*.1).toFixed(2);
        document.write(discountText.bold());
        document.write("<br>" + "(10% off for orders over $20)");
    }
    taxText = "<br><br>" + "MA Meal Tax: +$" + (total*.0625).toFixed(2);
    total = (total*1.0625).toFixed(2);
    document.write(taxText.bold());
    document.write("<br>"+ "(6.25% tax)");
    document.write("<br><br>" + "----------------------------");
    totalText = "<br>" + "Total : $" + total;
    document.write(totalText.bold());
    document.write("</center>");
</script>
</body>
</html>
